<Window x:Class="CoolPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoolPaint"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1024">
    <Grid Background="Gray">
        <Canvas Margin="0,50,0,0" Background="White" Name="cnv" MouseLeftButtonDown="cnv_MouseLeftButtonDown" MouseLeftButtonUp="cnv_MouseLeftButtonUp" MouseMove="cnv_MouseMove"/>
        <RadioButton Content="Square" HorizontalAlignment="Left" Margin="11,18,0,0" 
                     VerticalAlignment="Top" Name="sqrRadio"/>
        <RadioButton Content="Rectangle" HorizontalAlignment="Left" Margin="77,18,0,0" 
                     VerticalAlignment="Top" Name="rectRadio"/>
        <RadioButton Content="Circle" HorizontalAlignment="Left" Margin="161,18,0,0" 
                     VerticalAlignment="Top" Name="crcRadio"/>
        <RadioButton Content="Ellipse" HorizontalAlignment="Left" Margin="221,18,0,0" 
                     VerticalAlignment="Top" Name="ellRadio"/>
        <RadioButton Content="Triangle" HorizontalAlignment="Left" Margin="281,18,0,0" 
                     VerticalAlignment="Top" Name="triRadio"/>
        <Button Content="Draw" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
 