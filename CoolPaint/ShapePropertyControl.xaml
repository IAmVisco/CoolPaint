<UserControl x:Class="CoolPaint.ShapePropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoolPaint"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="Name" Text="NameHere" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="10" FontSize="14"/>
        <TextBox Name="Height" Text="HeightHere" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10" 
                 PreviewTextInput="TextBox_PreviewTextInput" TextChanged="Height_TextChanged" HorizontalContentAlignment="Center" FontSize="14"/>
        <TextBox Name="Width" Text="WidthHere" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" 
                 Margin="10" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="Width_TextChanged" HorizontalContentAlignment="Center" FontSize="14"/>
    </Grid>
</UserControl>
